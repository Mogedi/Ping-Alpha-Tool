<UserControl x:Class="PingAlpha_Tool.SingleIP"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PingAlpha_Tool"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="450">
    <Grid Height="30" VerticalAlignment="Top">
        <Label x:Name="hostName" Content="Label" HorizontalAlignment="Left" Margin="0,0,0,0" VerticalAlignment="Top" Width="125"/>
        <Label x:Name="ipAddress" Content="Label" HorizontalAlignment="Left" Margin="125,0,0,0" VerticalAlignment="Top" Width="125"/>
        <Label x:Name="status" Content="Label" HorizontalAlignment="Left" Margin="250,0,0,0" VerticalAlignment="Top" Width="125"/>
        <Button x:Name="removeButton" Content="Remove" HorizontalAlignment="Left" Margin="375,0,0,0" VerticalAlignment="Top" Width="75" RenderTransformOrigin="0.347,-0.494"/>

    </Grid>
</UserControl>
